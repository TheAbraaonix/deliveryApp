@using DeliveryApp.Enums;
@model UsuarioModel
@{
    ViewData["Title"] = "Adicionar usuário";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="AdicionarUsuario" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="Perfil">Perfil</label>
        <select class="form-control" asp-for="Perfil">
            <option value="0">Selecione o perfil de usuário</option>
            <option value="@PerfilEnum.Gerente">Gerente</option>
            <option value="@PerfilEnum.Atendente">Atendente</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do usuário">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    
    <br/>
    
    <div>
        <button type="submit" class="btn btn-success w-100">Adicionar</button>
        <a class="btn btn-secondary w-100" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
    </div>
</form>