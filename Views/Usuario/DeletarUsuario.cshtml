@model UsuarioModel
@{
    ViewData["Title"] = "Deletar usuário";
}

<div class="text-center">
    <h3>Deseja apagar o usuário @Model.Nome?</h3>
</div>

<a class="btn btn-primary w-100" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="DeletarUsuarioConfirmacao">Apagar</a>