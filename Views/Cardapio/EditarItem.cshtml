@model CardapioModel
@{
    ViewData["Title"] = "Editar item do cardápio";
}

<div class="text-center">
    <h1 class="display-4">Editar Item</h1>
</div>

<form asp-controller="Cardapio" asp-action="AtualizarItem" method="post">
    <input type="hidden" asp-for="Id"/>
    
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Categoria">Categoria</label>
        <input type="text" asp-for="Categoria" class="form-control" placeholder="Digite a categoria do produto">
        @Html.ValidationMessageFor(x => x.Categoria)
    </div>
    <div class="form-group">
        <label for="preco">Preço (R$)</label>
        <input type="text" asp-for="Preco" class="form-control" placeholder="Digite o preço do item em R$">
        @Html.ValidationMessageFor(x => x.Preco)
    </div>

    <br />

    <div>
        <button type="submit" class="btn btn-success w-100">Editar</button>
        <a class="btn btn-secondary w-100" asp-controller="Cardapio" asp-action="Index" role="button">Voltar</a>
    </div>
</form>