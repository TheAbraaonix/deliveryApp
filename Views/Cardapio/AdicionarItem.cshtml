@model CardapioModel
@{
    ViewData["Title"] = "Adicionar item do cardápio";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Item</h1>
</div>

<form asp-controller="Cardapio" asp-action="AdicionarItem" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
    </div>
    <div class="form-group">
        <label for="Categoria">Categoria</label>
        <input type="text" asp-for="Categoria" class="form-control" placeholder="Digite a categoria do produto">
    </div>
    <div class="form-group">
        <label for="preco">Preço (R$)</label>
        <input type="text" asp-for="Preco" class="form-control" placeholder="Digite o preço do item em R$">
    </div>
    
    <br/>
    
    <div>
        <button type="submit" class="btn btn-success w-100">Adicionar</button>
        <a class="btn btn-secondary w-100" asp-controller="Cardapio" asp-action="Index" role="button">Voltar</a>
    </div>
</form>